<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    xmlns:tools2="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="50dp"
            android:text="@string/teacher"
            android:textSize="18sp"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="214dp"
            android:layout_marginBottom="16dp"
            android:textSize="18sp"
            tools:layout_constraintBottom_toTopOf="@+id/ratingBar"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintStart_toEndOf="@+id/textView"
            tools:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="@string/rating"
            android:textSize="18sp"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintTop_toBottomOf="@+id/textView" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="32dp"
            android:stepSize="1"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintStart_toEndOf="@+id/textView3"
            tools:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="91dp"
            android:text="@string/course"
            android:textSize="18sp"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:text="@string/semester"
            android:textSize="18sp"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Spinner
            android:id="@+id/yearSpinner"
            android:layout_width="136dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="53dp"
            android:entries="@array/years"
            tools:layout_constraintStart_toEndOf="@+id/textView5"
            tools:layout_constraintTop_toBottomOf="@+id/course" />

        <Spinner
            android:id="@+id/semesterSpinner"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="16dp"
            android:entries="@array/semesters"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintTop_toBottomOf="@+id/course" />

        <EditText
            android:id="@+id/reviewText"
            android:layout_width="376dp"
            android:layout_height="148dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="14dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            tools:layout_constraintBottom_toTopOf="@+id/isAnonymus"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintHorizontal_bias="1.0"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintTop_toBottomOf="@+id/yearSpinner" />

        <CheckBox
            android:id="@+id/isAnonymus"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="245dp"
            android:layout_marginBottom="66dp"
            android:text="@string/anonymus"
            tools:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintTop_toBottomOf="@+id/reviewText" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="167dp"
            android:layout_marginTop="62dp"
            android:layout_marginEnd="156dp"
            android:layout_marginBottom="6dp"
            android:text="@string/submit"
            tools:layout_constraintBottom_toBottomOf="parent"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintTop_toBottomOf="@+id/reviewText" />

        <TextView
            android:id="@+id/course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="53dp"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:layout_constraintBottom_toTopOf="@+id/yearSpinner"
            tools:layout_constraintEnd_toEndOf="parent"
            tools:layout_constraintStart_toEndOf="@+id/textView4"
            tools:layout_constraintTop_toBottomOf="@+id/ratingBar" />
    </android.support.constraint.ConstraintLayout>
</layout>